<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#0DEACCFF"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Wilayah"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place"
                android:text="Tanggal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/date"
                android:text="Waktu"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/potency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:text="Potensi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/title_depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/potency"
                android:text="Kedalaman :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/depth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/potency"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/title_depth"
                android:text="68 km"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/title_coordinate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_depth"
                android:text="Koordinat :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/coordinate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_depth"
                android:layout_toRightOf="@id/title_coordinate"
                android:layout_marginLeft="5dp"
                android:text="-5.39,133.67"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/coordinate">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/title_latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lintang :"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/latitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/title_latitude"
                        android:text="5 LS"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/title_longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bujur :"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/longitude"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/title_longitude"
                        android:text="130 BT"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_magnitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="5.5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:text="SR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
